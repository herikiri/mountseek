<!DOCTYPE html>
<html>
<head>
  <title>Mountseek</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

            

<div class="row row-offcanvas row-offcanvas-right">
  <div class="col-xs-12 col-sm-9 main-content">

    <div class="navbar navbar-inverse navbar-static-top" role="navigation">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="offcanvas">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <%= link_to "Mountseek", root_path, class: "navbar-brand" %>
        </div>
        <div class="navbar-collapse collapse" style="height: 1px;">
          <ul class="nav navbar-nav">
            <li><%= link_to "Horses", home_horses_path %></li>
            <li><%= link_to "Studs", home_studs_path %></li>
            <li><%= link_to "Trailers", home_trailers_path %></li>
            <li><%= link_to "Tacks", home_tacks_path %></li>
            <li><%= link_to "Real Estates",  home_real_estates_path %></li>
            <li><%= link_to "Services", home_services_path %></li>
          </ul>
          <ul class="nav navbar-nav navbar-right">
            <li><a href=<%= pricing_path %> ><i class="fa fa-plus fa-inverse"> Place Ad</i></a></li>
            <% unless user_signed_in? %>
              <li class="sign-up"><%= link_to "Sign up", new_user_registration_path %></li>
              <li class="sign-in"><%= link_to "Sign in", new_user_session_path %></li>
            <% else %>  
              <li><a href=<%= ads_profiles_path %> >My Ads</a></li>
              <% if current_user.profile.user_picture.present? %>
                <li class="dropdown-toggle" data-toggle="dropdown"><img id="avatar" src=<%= current_user.profile.user_picture.avatar_url %> alt="avatar"/></li>
              <% else %>
                <li class="dropdown-toggle"  data-toggle="dropdown">
                  <span class="fa-stack fa-lg ">
                    <i class="fa fa-circle fa-stack-2x"></i>
                    <i class="fa fa-user fa-stack-1x fa-inverse"></i>
                  </span>
                </li>  
              <% end %>
               
              <ul class="dropdown-menu">
                <li><%= link_to "Profile", profiles_path %></li>
                <li><%= link_to "Favorite", favorites_profiles_path %></li>
                <li class="divider"></li>
                <li><%= link_to "Sign Out", destroy_user_session_path, method: :delete %></li>
              </ul>

            <% end %>

          </ul>
        </div><!--/.nav-collapse -->
      </div>
    </div>
    
    <%= yield %>
    
  </div><!--/span-->

  <div class="col-xs-6 col-sm-3 sidebar-offcanvas" id="sidebar" role="navigation">
    <div class="list-group">
      <%= link_to "Horses", home_horses_path, class: "list-group-item" %>
      <%= link_to "Studs", home_studs_path, class: "list-group-item" %>
      <%= link_to "Trailers", home_trailers_path, class: "list-group-item" %>
      <%= link_to "Tacks", home_tacks_path, class: "list-group-item" %>
      <%= link_to "Real Estates",  home_real_estates_path, class: "list-group-item" %>
      <%= link_to "Services", home_services_path, class: "list-group-item" %>
      
    </div>
  </div><!--/span-->
</div><!--/row-->



</body>

</html>


