<div class="container">
	<%= render "ads/shared/place_ad_header" %>

	<%= simple_form_for @ad_horse, :html => {:multipart => true} do |f| %>
	  <%= f.input :title %>
	  <%= f.input :description %>
	  <%= f.input :zip_code %>
	  <%= f.input :city %>
	  <%= f.input :state %>
	  <%= f.input :price %>
	  <%= f.input :ad_for %>
	  <%= f.input :name %>
	  <%= f.input :gender %>
	  <%= f.input :breed %>
	  <%= f.input :birth %>
	  <%= f.input :color %>
	  <%= f.input :height %>
	  <%= f.input :weight %>
	  <%= f.input :package_id, :as => :hidden %>
	  <%= f.input :user_id, :as => :hidden %>
	  <%= f.input :pictures, as: :file, :label => 'Browse Image' %>

	  <%= f.input :private_treaty %>
	  <%= f.button :submit, 'Save & Preview' %>
	<% end %>


</div>

