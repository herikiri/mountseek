<div class="container">
  <h4>Select Ad Type</h4>
  <ul class="nav nav-tabs" id="ads-tab">
    <li class="active"><a href="#horses">Horses</a></li>
    <li><a href="#studs">Studs</a></li>
    <li><a href="#trailers">Trailers</a></li>
    <li><a href="#tacks">Tacks</a></li>
    <li><a href="#real-estates">Real Estates</a></li>
    <li><a href="#services">Services</a></li>
  </ul>
   
  <h4>Select Ad Package</h4>
  <div class="tab-content">
    <div class="tab-pane active" id="horses">
      <dl>
      <% @horsePackages.each do |package| %>
        <dt><%= link_to "Package #{package.name}", place_horse_path(package) %></dt>
          <dd>Price: <%= package.price %></dd>
          <dd>Duration: <%= package.duration %></dd>
          <dd>Max Photo Upload: <%= package.max_photo_upload %></dd>
          <dd>Max Video Upload: <%= package.max_video_upload %></dd>
      <% end %>
      </dl>
    </div>
