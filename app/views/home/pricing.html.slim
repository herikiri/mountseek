.container
  br/
  h4 Select Ad Type
  ul#ads-tab.nav.nav-tabs
    li.active
      a href="#horses"  Horses
    li
      a href="#studs"  Studs
    li
      a href="#trailers"  Trailers
    li
      a href="#tacks"  Tacks
    li
      a href="#real-estates"  Real Estates
    li
      a href="#services"  Services
  h4 Select Ad Package
  .tab-content
    #horses.row.tab-pane.active
      - @horsePackages.each do |package|
        dl.span3.pricing-wrapper
          dt= link_to "Package #{package.name}", new_package_horse_path(package)
          dd
            | Price: #{package.price}
          dd
            | Duration: #{package.duration}
          dd
            | Max Photo Upload: #{package.max_photo_upload}
          dd
            | Max Video Upload: #{package.max_video_upload}
