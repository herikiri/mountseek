.container.advanced-search
  #spin style="display:none;"
  = search_form_for @search_services, url: services_result_path, :html => {role: "form"} do |f|


    .row
      .col-md-4
        h4 Service Type
        - @service_types.each do |service_type|
          = check_box_tag "q_service_type_cont_any_#{service_type.id}", service_type.name, false, name: 'q[service_type_cont_any][]'

          = label_tag "q_service_type_cont_any_#{service_type.id}", service_type.name
          br

    .row
      h4 Locations
      - @states.in_groups_of(20).each do |state_group|
        .col-md-3
          - state_group.each do |state|
            - unless state.nil?
              = check_box_tag "q_state_cont_any_#{state.id}", state.name, state.checked, name: 'q[state_cont_any][]'
              = label_tag "q_state_cont_any_#{state.id}", state.name
              br

    = f.submit "Search"

  hr

  - if @services
    - services_found = @services.count
  - else 
    - services_found = 0 
  h4#result= "#{services_found} Services Found"


javascript:
  var target = $('#spin');

  var service_types = [];
  $('form :checkbox[id^="q_service_type_cont_any_"]').click(function() {
    target.show();
    new Spinner().spin(target[0]);
    $('.advanced-search').css({opacity: '0.3'});
    if (this.checked) {
      service_types.push(this.value);
    } else {
      service_types.splice( $.inArray(this.value,service_types) ,1 );
    }
    
    console.log(service_types);
    
    $.get( '/services-filter', { "q[service_type_cont_any][]": service_types, "q[state_cont_any][]": states }, function(data) {
      target.hide();
      $('.advanced-search').css({opacity: '1'});
    });
    
  });

  var states = [];
  $('form :checkbox[id^="q_state_cont_any_"]').click(function() {
    target.show();
    new Spinner().spin(target[0]);
    $('.advanced-search').css({opacity: '0.3'});

    if (this.checked) {
      states.push(this.value);
    } else {
      states.splice( $.inArray(this.value, states) ,1 );
    }
    
    console.log(states);
    
    $.get( '/services-filter', { "q[service_type_cont_any][]": service_types, "q[state_cont_any][]": states }, function(data) {
      target.hide();
      $('.advanced-search').css({opacity: '1'});
    });
    
  });
