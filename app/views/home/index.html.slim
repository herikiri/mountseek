                | Submit
           

.container 
  h4 Featured Horse
  .owl-carousel
    - unless @featured_horses.nil?
      - @featured_horses.each do |horse|
        = render partial: "shared/ad_thumbnail", locals: {horse: horse}
    - else
      .empty-ad
        h4 Ad Not Available Yet

  hr

  h4 Newest Horse
  .owl-carousel
    - unless @newest_horses.nil?
      - @newest_horses.each do |horse|
        = render partial: "shared/ad_thumbnail", locals: {horse: horse}
    - else
      .empty-ad
        h4 Ad Not Available Yet

  hr

footer
  = render "layouts/shared/footer"


= javascript_include_tag 'fav_button', 'data-turbolinks-track' => true
= javascript_include_tag 'home', 'data-turbolinks-track' => true