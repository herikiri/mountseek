.container
	= smart_listing_controls_for(:trailers) do
		= render "home/shared/trailers_checkbox"

	- if @trailers
		- trailers_found = @trailers.count
	- else 
		- trailers_found = 0 

	h4#result= "#{trailers_found} Trailer Found"

	hr
	= smart_listing_render :trailers

= include_gon
= javascript_include_tag 'inspect_initial_checkbox', 'data-turbolinks-track' => true